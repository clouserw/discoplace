@import 'lib.styl'

#search-q {
    background: #f4f4f4 url(../img/search.svg) 8px 50% no-repeat;
    border: 2px solid $cement-gray;
    border-radius: 10px;
    color: $london-fog-gray;
    font: 300 20px/28px $open-stack;
    height: 34px;
    outline: none;
    padding: 2px 10px 1px 32px;
    z-index: 2;
    &::-moz-placeholder {
        color: darken($cement-gray, 5%);
    }
    &:focus {
        border-color: #72cfff;
    }
}
