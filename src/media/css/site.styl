@import 'lib';

* {
   box-sizing: border-box;
   word-wrap: break-word;
}

a {
   text-decoration: none;
   color: $sailor-blue;

   &:hover {
       text-decoration: underline;
   }
   &:not([href]) {
       cursor: pointer;
   }
}

body {
  background: #1e1e9c;
  color: $white;
  overflow-y: scroll;
}

header {
  background-image: url(../img/rocket-bg.svg);
  background-color: #7270C0;
  padding-top: 30px;
}

header::after {
  content: "";
  display: block;
  height: 70px;
  background-image: url(../img/curved-background.svg);
  background-repeat: no-repeat;
  background-size: 100%;
  width: 100%;
}

h1 {
  font-size: 30px;
  font-weight: 500;
  margin-bottom: 20px;
  text-align: center;
}

#page {
  margin-left: auto;
  margin-right: auto;
}

.main {
  padding-bottom: 15px;
}

section > form, section > ol, section > div {
    max-width: 960px;
    margin-right: auto;
    margin-left: auto;
}

.search {
  background-color: #3F3CAD;
  text-align: center;
  padding: 0; /* we set a margin on the search input instead */
}

.promo {
  font-weight: 300;
  font-size: 20px;
}

.promo h3 {
  font-size: 20px;
  color: #fff;
  line-height: 24px;
}

.gametime {
  background-color: #4F4DB3;
}

.gametime > div {
  padding: 60px 540px 0 180px;
  text-align: right;
  background: url(../img/gametime-promo.png) no-repeat 490px 25px;
  min-height: 250px; /* image height + 25px around it */
}

.gamesonthego {
  background-color: #615EB9;
}

.gamesonthego > div {
  padding: 60px 80px 0 490px;
  background: url(../img/gamesonthego-promo.png) no-repeat 60px 25px;
  min-height: 293px; /* image height + 25px around it */
}

.opensearch {
  background-color: #7270C0;
}

.opensearch > div {
  padding: 80px 540px 0 90px;
  text-align: right;
  background: url(../img/opensearch-promo.png) no-repeat 490px 25px;
  min-height: 284px; /* image height + 25px around it */
}

.spinner {
    spinner();
    &.alt {
        spinner-alt-image();
    }
    &.btn-replace {
        spinner-abs();
        top: 24px;
    }
    &.spaced {
        margin: 70px auto;
    }
    &.padded {
        padding: 70px 0;
    }
}

@keyframes spin {
    from { transform: rotate(0turn); }
    to { transform: rotate(1turn); }
}

footer, #lightbox {
  display: none;
}