@import 'lib';

* {
   box-sizing: border-box;
   word-wrap: break-word;
}

a {
   text-decoration: none;
   color: $sailor-blue;

   &:hover {
       text-decoration: underline;
   }
   &:not([href]) {
       cursor: pointer;
   }
}

body {
  background: #1e1e9c;
  color: $white;
  overflow-y: scroll;
}

header {
  background-image: url(../img/rocket-bg.svg);
  background-color: #7270C0;
  min-height: 120px;
  padding-top: 30px;
}

header::after { /* FIXME: add shape */
  content: "";
  display: block;
  height: 30px;
}

h1 {
  font-size: 30px;
  font-weight: 500;
  text-align: center;
}

#page {
  margin-left: auto;
  margin-right: auto;
}

.main, .promo, .search {
  margin-left: auto;
  margin-right: auto;
  max-width: 960px;
  padding: 23px 0 15px 0;
}

.search {
  background-color: #3F3CAD;
  text-align: center;
  padding: 0; /* we set a margin on the search input instead */
}

.promo {
  font-weight: 300;
  font-size: 20px;
  min-height: 300px;
}

.promo h3 {
  font-size: 20px;
  color: #fff;
  line-height: 24px;
}

.gametime {
  padding: 60px 540px 60px 180px;
  min-height: 300px;
  text-align: right;
  background: #4F4DB3 url(../img/gametime-promo.png) no-repeat 490px 25px;
}

.gamesonthego {
  padding: 60px 80px 60px 490px;
  background: #615EB9 url(../img/gamesonthego-promo.png) no-repeat 60px 25px;
}

.opensearch {
  padding: 80px 540px 60px 90px;
  text-align: right;
  background: #7270C0 url(../img/opensearch-promo.png) no-repeat 490px 25px;
}

.spinner {
    spinner();
    &.alt {
        spinner-alt-image();
    }
    &.btn-replace {
        spinner-abs();
        top: 24px;
    }
    &.spaced {
        margin: 70px auto;
    }
    &.padded {
        padding: 70px 0;
    }
}

@keyframes spin {
    from { transform: rotate(0turn); }
    to { transform: rotate(1turn); }
}

footer, #lightbox {
  display: none;
}