@import 'lib';


* {
   box-sizing: border-box;
   word-wrap: break-word;
}

a {
   text-decoration: none;
   color: $sailor-blue;

   &:hover {
       text-decoration: underline;
   }
   &:not([href]) {
       cursor: pointer;
   }
}

body {
  background: $seavan-salt-white;
  color: $castle-skull-gray;
}

.container {
  display: flex;
  justify-content: center;
}

section {
  padding: 1rem;
  min-width: 15rem;
}

.main {
  flex: 2;
}

.sidebar {
  flex: 1; 
}

section > div {
  max-width: 45rem;
  margin-right: auto;
  margin-left: auto;
}

.sidebar div {
  padding: 1rem;
  margin-bottom: 1rem;
  background: none repeat scroll 0% 0% $white;
  border-radius: 5px;
  box-shadow: 0px 1px 1px $cement-gray;
}

.sidebar h3 {
  font-weight: bold;
  margin-bottom: 0.4rem;
}

.item {
  width: 100%;
}

footer {
  padding: 1rem 8rem;
}