@import 'lib';

* {
   box-sizing: border-box;
   word-wrap: break-word;
}

a {
   text-decoration: none;
   color: $sailor-blue;

   &:hover {
       text-decoration: underline;
   }
   &:not([href]) {
       cursor: pointer;
   }
}

body {
  background: #1e1e9c;
  color: $white;
  overflow-y: scroll;
}

h2, h3 {
  color: $white;
}

header {
  background-image: url(../img/rocket-bg.svg);
  background-color: #7270C0;
  padding-top: 30px;
  background-size: 180px;
  background-position: 80px 35px;
}

header::after {
  content: "";
  display: block;
  height: 70px;
  background-image: url(../img/curved-background.svg);
  background-repeat: no-repeat;
  background-size: 100%;
  width: 100%;
}

h1 {
  font-size: 30px;
  font-weight: 500;
  margin-bottom: 20px;
  text-align: center;
}

#page {
  margin-left: auto;
  margin-right: auto;
}

.main {
  padding-bottom: 15px;
}

section > form, section > ol, section > div {
    max-width: 960px;
    margin-right: auto;
    margin-left: auto;
}

.search {
  background-color: #3F3CAD;
  padding: 30px;
  text-align: center;
}

.promo {
  align-items: center;
  display: flex;
  flex-wrap: wrap;
  font-weight: 300;
  font-size: 20px;
  justify-content: space-around;

  h3 {
    color: #fff;
    font-size: 20px;
    line-height: 24px;
  }

  & > div, &::after {
    background-position: 30px center;
    background-repeat: no-repeat;
    display: block;
    content: "";
    flex: 1;
    min-width: 250px;
    padding: 20px 30px;
    text-align: right;
  }

  & > div > p {
    margin-left: auto;
    max-width: 320px;
  }

  &.inverted > div, &.inverted::after {
    order: 2;
    text-align: left;
  }

  &.inverted::after {
    background-position: right 30px center;
    order: 1;
  }

  &.inverted > div > p {
    margin-left: 0;
    margin-right: auto;
  }
}

.gametime {
  background-color: #4F4DB3;
}

.gametime::after {
  background-image: url(../img/gametime-promo.png);
  min-height: 200px;
  min-width: 270px;
}

.gamesonthego {
  background-color: #615EB9;
}

.gamesonthego::after {
  background-image: url(../img/gamesonthego-promo.png);
  min-height: 243px;
  min-width: 364px;
}

.opensearch {
  background-color: #7270C0;
}

.opensearch::after {
  background-image: url(../img/opensearch-promo.png);
  min-height: 216px;
  min-width: 250px;
}

.newsletter {
    /* rest of newsletter styles live in newsletter.styl, the background color
       is kept here to easily change the colors between the different promos  */
    background-color: #3F3CAD;

    .fullup {
      background-color: #3F3CAD;
    }
}

#search-q {
    background: #f4f4f4 url(../img/search.svg) 10px 50% / 34px no-repeat;
    font: 400 30px/34px $open-stack;
    height: 60px;
    margin: 0;
    max-width: 620px;
    outline: none;
    padding: 0 10px 0 55px;
    width: 100%;
}

.spinner {
    spinner();
    &.alt {
        spinner-alt-image();
    }
    &.btn-replace {
        spinner-abs();
        top: 24px;
    }
    &.spaced {
        margin: 70px auto;
    }
    &.padded {
        padding: 70px 0;
    }
}

@keyframes spin {
    from { transform: rotate(0turn); }
    to { transform: rotate(1turn); }
}

footer, #lightbox {
  display: none;
}
